<%= form_with(model: opening_hour) do |form| %>
  <% if opening_hour.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(opening_hour.errors.count, "error") %> prohibited this opening_hour from being saved:</h2>

      <ul>
        <% opening_hour.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :day %><br />
    <%= form.select :day, @days  %>
  </div>

  <div>
    <%= form.label :opens %><br>
    <%= form.time_field :opens,
      value: "%H:%M",
      min: 'hh:mm:ss',
      max: 'hh:mm:ss'%>
  </div>

  <div>
    <%= form.label :closes %><br>
    <%=
      form.time_field :closes,
        value: "%H:%M",
        min: 'hh:mm:ss',
        max: 'hh:mm:ss'
    %>
  </div>

  <div>
    <%= form.label :branch_office_id %><br />
    <%= form.select :branch_office_id, BranchOffice.all.map { |b| [b.name, b.id] } %>
  <div>
    <%= form.submit %>
  </div>
<% end %>
