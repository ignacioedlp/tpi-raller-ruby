<div class="text-center container">
<main class="form-signin">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <h1 class="h3 mb-3 fw-normal">Iniciar sesion</h1>

  <div class="">
    <%= f.label "Usuario/email" %><br />
    <%= f.text_field :login, autofocus: true, class: "form-control" %>
  </div>

  <div class="">
    <%= f.label  "Contraseña"  %><br />
    <%= f.password_field :password, autocomplete: "Contraseña actual", class: "form-control"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Iniciar sesion", class: " btn btn-lg btn-primary" %>
  </div>
  <% end %>
</main>
</div>


<%= render "devise/shared/links" %>
