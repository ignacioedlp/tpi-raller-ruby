<%= form_with(model: shift) do |form| %>
  <% if shift.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(shift.errors.count, "error") %> prohibited this shift from being saved:</h2>

      <ul>
        <% shift.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :day %><br />
    <%= form.select :day, Shift::DAYS  %>
  </div>

  <div class="field">
    <%= form.label :hour %>
    <%= form.time_select :hour, minute_step: 15 %>
  </div>

  <div class="field">
    <%= form.label :reason %>
    <%= form.text_field :reason %>
  </div>
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
